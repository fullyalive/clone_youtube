extends layouts/main
include mixins/videoBlock

block content
    .search__header
        h3 #{searchingBy}로 검색한 결과입니다.
    .search__videos
        if videos.length === 0
            h5 검색결과가 없습니다.
        each item in videos
            +videoBlock({
                id: item.id,
                title: item.title,
                creator: item.creator.name,
                views: item.views,
                videoFile: item.fileUrl,
                createdAt: item.createdAt.toDateString()
            })